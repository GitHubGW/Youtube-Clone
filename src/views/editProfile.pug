extends layouts/main.pug

block content
  .form-container 
    form(action=`/users/${routes.editProfile}`, method="post", enctype="multipart/form-data")
      .fileUpload.form__input
          input(type="file", name="avatar", id="avatar" accept="image/*" placeholder="이름")
          i.fas.fa-file-image
      .form__input
          input(type="text", name="name", placeholder="이름", value=loggedUser.name)
          i.fa.fa-user
      .form__input
          input(type="email", name="email", placeholder="이메일", value=loggedUser.email)
          i.fa.fa-envelope
      input(type="submit" value="프로필 업데이트")