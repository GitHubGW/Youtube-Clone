extends layouts/main.pug
include mixins/videoBlock.pug

block content
  .home-container 
    .home-menu 
      ul.home-menu-main 
        li.home-menu-item
          i.fas.fa-home
          span 홈
        li.home-menu-item
          i.fas.fa-compass
          span 탐색
        li.home-menu-item
          i.fab.fa-youtube-square
          span 구독
      .division-line

      ul.home-menu-personal 
        li.home-menu-item
          i.fas.fa-archive
          span 보관함
        li.home-menu-item
          i.fas.fa-history
          span 시청 기록
        li.home-menu-item
          i.fas.fa-clock
          span 나중에 볼 동영상
        li.home-menu-item
          i.fas.fa-thumbs-up
          span 좋아요 표시한 동영상
      .division-line

      h3 구독
      ul.home-menu-subscription 
        li.home-menu-item.home-menu-item-subscription
          img(src="/images/nomadcoder_logo.svg")
          span 노마드코더 NomadCoders
        li.home-menu-item
          i.fas.fa-plus-circle
          span 더보기
      .division-line

      h3 YOUTUBE 더보기
      ul.home-menu-seemore 
        li.home-menu-item
          i.fab.fa-youtube
          span YouTube Premium
        li.home-menu-item
          i.fas.fa-film
          span 영화
        li.home-menu-item
          i.fas.fa-gamepad
          span 게임
        li.home-menu-item
          i.fas.fa-rss
          span 실시간
        li.home-menu-item
          i.fas.fa-lightbulb
          span 학습
        li.home-menu-item
          i.fas.fa-trophy
          span 스포츠
      .division-line

      ul.home-menu-setting 
        li.home-menu-item
          i.fas.fa-cog
          span 설정
        li.home-menu-item
          i.fas.fa-flag
          span 신고 기록
        li.home-menu-item
          i.fas.fa-question-circle
          span 고객센터
        li.home-menu-item
          i.fas.fa-exclamation-circle
          span 의견 보내기

    .home-videos 
      .home-videos-content
        //- h1 #{item.id}과 h1=item.id는 같은 의미이다.(자바스크립트 코드를 가져옴)
        //- mixin을 통해 만든 videoBlock함수를 호출함(videoBlock함수에는 객체로 인자를 전달함)
        each item in videos
          +videoBlock({
            id: item.id,
            title: item.title,
            views: item.views,
            videoFile: item.fileUrl,
            thumbnailFile: item.thumbnailUrl,
            createdAt: item.createdAt,
            creator: item.creator
          })