mixin thumbnailBlock(video)
  .thumbnailBlock
    a(href=routes.videoDetail(video.id))
      video.thumbnailBlock__thumbnail(src=video.videoFile, poster=video.thumbnailFile, controls=false muted="muted")
      .thumbnail__container
        .thumbnailBlock__main
          h3.thumbnailBlock__title #{video.title}
          h4.thumbnailBlock__description #{video.description}
        if video.views === 1
          h6.thumbnailBlock__views 1 view
        else if video.views === 0
          h6.thumbnailBlock__views 0 view
        else 
          h6.thumbnailBlock__views #{video.views} views