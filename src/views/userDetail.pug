extends layouts/main.pug
include mixins/thumbnailBlock.pug

block content
  .user-profile 
    .user-profile-container
      .user-profile__header
        .profile__avatar
          if user.avatarUrl===undefined
            img.u-avatar(src="/images/profile_user.png")
          else 
            img.u-avatar(src=user.avatarUrl)
        .profile__userinfo
          .profile__username
            h4 
              |Name
              h5 - #{user.name}
          .profile__email
            h4 
              |Email
              h5 - #{user.email}
          .profile__githubid
            h4
              |GitHub
              h5 - #{user.githubId}
          .profile__kakaoid
            h4
              |Kakao
              h5 - #{user.kakaoId}

      if loggedUser
        if user.id === loggedUser.id
          .user-profile__btns
            a(href=`/users${routes.editProfile}` class="edit_profile")
              button Edit Profile
            a(href=`/users${routes.changePassword}` class="edit_password")
              button Change Password

      if user.videos.length > 0
        .uploaded-videos
          h2 #{user.name}'s Video
          .uploaded-videos-container
            each item in user.videos 
              +thumbnailBlock({
                id: item.id,
                title: item.title,
                views: item.views,
                videoFile: item.fileUrl,
                thumbnailFile: item.thumbnailUrl,
                creator: item.creator,
                description: item.description
              })

